<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form update-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" placeholder="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="post-desc">Description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc">{{description}}</textarea>
      </div>
      <div class="form-group">
        <button type="click" class="btn btn-primary" post-id="{{id}}">Update</button>
      </div>
    </form>
  </div>
</div>

<div class="col-md-4">
  <button class="btn btn-sm btn-danger deleteButton" data-id="{{id}}">Delete</button>
</div>

<script src="/js/editpost.js"></script>